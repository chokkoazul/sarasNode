doctype html
html(lang="en")
  head
    title mi priemra pagina
    meta(charset="utf-8")
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="css/main.css")
    link(rel="stylesheet" href="css/animate.css")
    link(href="https://fonts.googleapis.com/css?family=Lato|Pacifico" rel="stylesheet")

  body
    div(class="col-md-5 center-block no-float top-space text-left")
        h1 Editar Producto
        form(method="POST" action="/admin/edit" style="margin-top:1.5em;")
           input(id="id_prod" type="hidden" name="id_prod" value="#{product.id}")
           div(class="form-group")
             label Nombre
             input(id="title" type="text" name="title" value="#{product.title}" placeholder="Nombre del producto" class="form-control")
           div(class="form-group")
             label Descripción
             textarea(id="description" name="description" placeholder="Descripción del producto" class="form-control")=product.description
           div(class="form-group")
             label Estado
             textarea(id="status" name="status" placeholder="Estado del producto" class="form-control")=product.status
           div(class="form-group text-right")
              input(type="submit" class="btn btn-info" value="Guardar")
